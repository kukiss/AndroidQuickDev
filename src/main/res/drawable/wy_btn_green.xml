<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/wy_bg_shadow"/>
            <item>
                <shape>
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/green700"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item android:drawable="@drawable/wy_bg_shadow"/>
            <item>
                <shape>
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/grey400"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:drawable="@drawable/wy_bg_shadow"/>
            <item>
                <shape>
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/green500"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>